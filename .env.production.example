# Этот файл используется docker-compose.production.yml
# ВАЖНО: Скопируйте этот файл в .env и заполните своими данными
# НЕ коммитьте .env в git!

# ============================================
# База данных PostgreSQL
# ============================================
# ВАЖНО: Эти значения должны совпадать с laravel/.env и fastapi/.env!
# Используйте: openssl rand -base64 32 | tr -d "=+/" | cut -c1-25
DB_DATABASE=hunter_photo
DB_USERNAME=hunter_photo
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# ============================================
# Приложение Laravel
# ============================================
APP_ENV=production
APP_DEBUG=false
# APP_KEY будет сгенерирован автоматически при первом запуске
# Если нужно сгенерировать вручную: docker exec hunter-photo-laravel php artisan key:generate
APP_KEY=
APP_URL=https://hunter-photo.ru

